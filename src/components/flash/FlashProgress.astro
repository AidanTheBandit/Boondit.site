---
/**
 * Flash Progress Component
 * Shows download and flash progress with percentage
 */
---

<div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm relative">
  <div class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-[hsl(var(--color-purple))]/50 rounded-tr-2xl"></div>
  <div class="absolute bottom-0 left-0 w-8 h-8 border-b-2 border-l-2 border-[hsl(var(--color-pink))]/50 rounded-bl-2xl"></div>

  <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider">
    <div class="w-2 h-6 bg-[hsl(var(--color-purple))]"></div>
    Progress
  </h2>

  <div class="space-y-6">
    <div>
      <div class="flex items-center justify-between text-[10px] font-mono text-muted-foreground mb-2 uppercase tracking-widest">
        <span>Download</span>
        <span id="downloadPct">0%</span>
      </div>
      <div class="h-1.5 w-full bg-secondary/30 rounded-full overflow-hidden border border-border/20">
        <div id="downloadBar" class="h-full w-0 bg-gradient-to-r from-[hsl(var(--color-pink))] to-[hsl(var(--color-purple))] transition-all duration-300"></div>
      </div>
    </div>
    <div>
      <div class="flex items-center justify-between text-[10px] font-mono text-muted-foreground mb-2 uppercase tracking-widest">
        <span id="flashAction">Waiting</span>
        <span id="flashPct">0%</span>
      </div>
      <div class="h-1.5 w-full bg-secondary/30 rounded-full overflow-hidden border border-border/20">
        <div id="flashBar" class="h-full w-0 bg-gradient-to-r from-[hsl(var(--color-purple))] to-[hsl(var(--color-gray))] transition-all duration-300"></div>
      </div>
      <p id="flashItem" class="text-[10px] font-mono text-muted-foreground/60 mt-2 uppercase truncate tracking-tight">NO_ACTIVE_FLASH</p>
    </div>
  </div>
</div>
