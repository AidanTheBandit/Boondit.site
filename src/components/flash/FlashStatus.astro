---
/**
 * Flash Status Component
 * Displays connection status for WebUSB, Web Serial, Bootloader, and Fastbootd
 */
---

<div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm relative">
  <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-[hsl(var(--color-pink))]/50 rounded-tl-2xl"></div>
  <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-[hsl(var(--color-purple))]/50 rounded-br-2xl"></div>

  <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider">
    <div class="w-2 h-6 bg-[hsl(var(--color-pink))]"></div>
    Status
  </h2>

  <div class="space-y-4 font-mono">
    <div class="flex items-center justify-between text-xs">
      <span class="text-muted-foreground uppercase tracking-widest">WEBUSB</span>
      <span id="webusbStatus" class="px-2 py-0.5 rounded bg-secondary text-secondary-foreground border border-border/50 uppercase text-[10px]">CHECKING...</span>
    </div>
    <div class="flex items-center justify-between text-xs">
      <span class="text-muted-foreground uppercase tracking-widest">WEB_SERIAL</span>
      <span id="webserialStatus" class="px-2 py-0.5 rounded bg-secondary text-secondary-foreground border border-border/50 uppercase text-[10px]">CHECKING...</span>
    </div>
    <div class="flex items-center justify-between text-xs">
      <span class="text-muted-foreground uppercase tracking-widest">BOOTLOADER</span>
      <span id="bootloaderStatus" class="px-2 py-0.5 rounded bg-secondary text-secondary-foreground border border-border/50 uppercase text-[10px]">NOT_CONNECTED</span>
    </div>
    <div class="flex items-center justify-between text-xs">
      <span class="text-muted-foreground uppercase tracking-widest">FASTBOOTD</span>
      <span id="fastbootdStatus" class="px-2 py-0.5 rounded bg-secondary text-secondary-foreground border border-border/50 uppercase text-[10px]">NOT_CONNECTED</span>
    </div>
  </div>
</div>

<style is:global>
  .is-ok {
    background-color: hsl(var(--color-pink) / 0.1) !important;
    color: hsl(var(--color-pink)) !important;
    border-color: hsl(var(--color-pink) / 0.3) !important;
  }

  .is-error {
    background-color: rgba(248, 113, 113, 0.1) !important;
    color: #fca5a5 !important;
    border-color: rgba(248, 113, 113, 0.3) !important;
  }
</style>
