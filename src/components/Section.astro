---
type Props = {
  title: string;
  description?: string;
  full_screen?: boolean;
  className?: string;
  hideTitle?: boolean;
};
const { title = "Section", description, full_screen = false, className = "", hideTitle = false } = Astro.props;
---

<section
  id={title.toLowerCase().replaceAll(" ", "")}
  class={`relative ${full_screen ? "min-h-screen" : ""} px-4 md:px-8 lg:px-12 py-12 md:py-20 w-full max-w-7xl mx-auto overflow-hidden ${className}`}
>
  {!hideTitle && (
    <div class="mb-10 md:mb-16 pb-4 flex flex-col md:flex-row items-start md:items-end justify-between relative">
      <div class="z-10 relative bg-background pr-6">
        <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold tracking-tighter text-foreground">
          &lt;{title} /&gt;
        </h2>
        {description && (
          <p class="text-muted-foreground text-sm md:text-base font-mono uppercase tracking-widest mt-2 max-w-2xl">
            {description}
          </p>
        )}
      </div>
      
      {/* Decorative Line instead of border-bottom */}
      <div class="absolute bottom-4 left-0 w-full h-px bg-border/50 z-0"></div>
      
      <div class="hidden md:flex gap-1 h-3 drop-shadow-sm z-10 bg-background pl-4">
        <div class="w-8 h-full bg-[hsl(var(--color-pink))] rounded-sm"></div>
        <div class="w-8 h-full bg-[hsl(var(--color-purple))] rounded-sm"></div>
        <div class="w-8 h-full bg-[hsl(var(--color-gray))] rounded-sm"></div>
      </div>
    </div>
  )}
  <div class="w-full relative z-10">
    <slot />
  </div>
</section>
