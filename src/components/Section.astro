---
type Props = {
  title: string;
  full_screen?: boolean;
  className?: string;
};
const { title = "Section", full_screen = false, className = "" } = Astro.props;
---

<section
  id={title.toLowerCase().replaceAll(" ", "")}
  class={`${full_screen ? "min-h-screen" : ""} px-4 py-8 md:py-10 w-screen !overflow-x-hidden ${className}`}
>
  <div class="w-full grid place-items-center">
    <h2 class="text-3xl md:text-4xl lg:text-6xl text-center px-2 font-bold">
      {`<${title} />`}
    </h2>
  </div>
  <div class="w-full mt-6 md:mt-10 px-2 md:px-4">
    <slot />
  </div>
</section>
