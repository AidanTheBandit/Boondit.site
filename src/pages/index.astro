---
import { getCollection } from "astro:content";
import Hero from "@/components/Hero.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Section from "@/components/Section.astro";
import BlogPostCard from "@/components/BlogPostCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Layout from "@/layouts/Layout.astro";
import { KNOWN_TECH, ABOUT_ME } from "@/consts";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const allProjects = (await getCollection("projects")).sort(
  (a, b) => (a.data.sortOrder || 0) - (b.data.sortOrder || 0),
);

// Show latest 4 projects on home
const projects = allProjects.slice(0, 4);
---

<Layout title="Boondit">
  <Hero />
  <Section title="My Posts">
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
      {
        posts.map((post) => (
          <BlogPostCard
            slug={post.id}
            title={post.data.title}
            excerpt={post.data.description}
            date={post.data.pubDate}
          />
        ))
      }
    </div>
  </Section>

  <Section title="Projects">
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-6">
      {
        projects.map((project) => (
          <ProjectCard
            title={project.data.title}
            period={project.data.period}
            link={project.data.link}
            description={project.data.description}
          />
        ))
      }
    </div>
    <div class="w-full text-center mt-10">
      <a
        href="/projects"
        class="inline-flex items-center justify-center px-6 py-3 border border-accent/50 text-base font-medium rounded-full text-accent hover:bg-accent hover:text-white transition-all duration-300"
      >
        View all projects â†’
      </a>
    </div>
  </Section>
  <Section title="Technologies I Know" full_screen={false}>
    <div class="w-full grid place-items-center">
      <div
        class="w-full gap-2 md:gap-4 flex flex-wrap px-3 max-w-4xl text-sm md:text-lg justify-center"
      >
        {KNOWN_TECH.map((x) => <Breadcrumb title={x} />)}
      </div>
    </div>
  </Section>
  <Section title="About Me">
    <div class="w-full grid place-items-center">
      <div
        class="max-w-4xl text-lg md:text-xl lg:text-lg opacity-90 text-center justify-evenly px-4"
      >
        <p>{ABOUT_ME}</p>
      </div>
    </div>
  </Section>
</Layout>
