---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
---

<Layout title="R1 OpenClaw QR Gen - Boondit">
  <div class="mt-24 md:mt-32 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-24 relative">
    <Section title="OpenClaw QR Gen">
      <div class="max-w-7xl mx-auto relative">
        <!-- Header -->
        <header class="text-center mb-12">
          <p class="text-muted-foreground text-lg font-mono">Generate gateway configuration for OpenClaw on R1</p>
          
          <!-- Warning Banner -->
          <div class="mt-8 mx-auto max-w-3xl relative group">
            <div class="absolute -inset-[1px] bg-gradient-to-r from-yellow-500/50 via-orange-500/50 to-yellow-500/50 rounded-2xl opacity-50 blur-sm"></div>
            <div class="relative bg-card/80 backdrop-blur-sm border border-yellow-500/20 rounded-2xl p-4 shadow-sm flex items-center justify-center gap-3">
                <span class="text-yellow-500 font-mono font-bold">⚠</span>
                <p class="text-muted-foreground font-mono text-sm uppercase tracking-wide">
                  Sensitive data: Tokens are processed <span class="text-foreground font-bold">locally</span> and never uploaded
                </p>
            </div>
          </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
          <!-- Configuration Section -->
          <div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm h-fit relative">
            <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-[hsl(var(--color-pink))]/50 rounded-tl-2xl"></div>
            <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-[hsl(var(--color-purple))]/50 rounded-br-2xl"></div>

            <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider">
              <div class="w-2 h-6 bg-[hsl(var(--color-pink))]"></div>
              Configuration
            </h2>
            
            <form id="moltbotForm" class="space-y-6">
              <div>
                <label for="ips" class="flex justify-between text-sm font-semibold mb-2 text-foreground font-mono">
                  <span>IP_ADDRESSES</span>
                  <span class="text-muted-foreground text-xs tracking-widest">[CSV]</span>
                </label>
                <input
                  type="text"
                  id="ips"
                  required
                  class="w-full bg-background border border-border/60 rounded-xl px-4 py-3 text-foreground focus:ring-2 focus:ring-[hsl(var(--color-pink))]/20 focus:border-[hsl(var(--color-pink))] transition-all outline-none font-mono text-sm"
                  placeholder="1.2.3.4, 5.6.7.8"
                />
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="port" class="flex justify-between text-sm font-semibold mb-2 text-foreground font-mono">
                    <span>PORT</span>
                    <span class="text-[hsl(var(--color-pink))] text-xs tracking-widest">[REQ]</span>
                  </label>
                  <input
                    type="number"
                    id="port"
                    value="18789"
                    required
                    class="w-full bg-background border border-border/60 rounded-xl px-4 py-3 text-foreground focus:ring-2 focus:ring-[hsl(var(--color-pink))]/20 focus:border-[hsl(var(--color-pink))] transition-all outline-none font-mono text-sm"
                  />
                </div>
                <div>
                  <label for="protocol" class="flex justify-between text-sm font-semibold mb-2 text-foreground font-mono">
                    <span>PROTOCOL</span>
                    <span class="text-[hsl(var(--color-pink))] text-xs tracking-widest">[REQ]</span>
                  </label>
                  <select
                    id="protocol"
                    class="w-full bg-background border border-border/60 rounded-xl px-4 py-3 text-foreground focus:ring-2 focus:ring-[hsl(var(--color-pink))]/20 focus:border-[hsl(var(--color-pink))] transition-all outline-none font-mono text-sm appearance-none"
                  >
                    <option value="wss" selected>wss</option>
                    <option value="ws">ws</option>
                  </select>
                </div>
              </div>

              <div>
                <label for="token" class="flex justify-between text-sm font-semibold mb-2 text-foreground font-mono">
                  <span>TOKEN</span>
                  <span class="text-[hsl(var(--color-pink))] text-xs tracking-widest">[REQ]</span>
                </label>
                <input
                  type="text"
                  id="token"
                  required
                  class="w-full bg-background border border-border/60 rounded-xl px-4 py-3 text-foreground focus:ring-2 focus:ring-[hsl(var(--color-pink))]/20 focus:border-[hsl(var(--color-pink))] transition-all outline-none font-mono text-sm"
                  placeholder="secret-token"
                />
              </div>

              <button
                type="submit"
                class="w-full py-4 bg-[hsl(var(--color-pink))] hover:bg-[hsl(var(--color-pink))]/90 text-white rounded-xl font-mono text-sm font-bold tracking-widest transition-all shadow-lg shadow-[hsl(var(--color-pink))]/20 uppercase"
              >
                Generate_QR
              </button>
            </form>

            <!-- Test Connectivity Section -->
            <div class="mt-10 pt-8 border-t border-border/30">
              <h3 class="text-sm font-mono text-muted-foreground uppercase tracking-widest mb-4">Connection_Test</h3>
              <div id="testLog" class="bg-black/50 border border-border/60 rounded-xl p-4 font-mono text-[11px] h-32 overflow-y-auto mb-4 custom-scrollbar flex flex-col gap-1">
                  <span class="text-muted-foreground italic">READY_FOR_TEST...</span>
              </div>
              <button
                id="testConnectionBtn"
                type="button"
                class="w-full py-3 bg-secondary hover:bg-secondary/80 text-secondary-foreground rounded-xl font-mono text-xs tracking-wider transition-all border border-border/50 shadow-sm flex items-center justify-center gap-2 uppercase"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span id="testConnectionLabel">Test_Connectivity</span>
              </button>
              <p id="testConnectionNote" class="text-[10px] text-yellow-500/80 mt-2 font-mono uppercase hidden">Test disabled for WS/local IPs</p>
            </div>
          </div>

          <!-- Preview Section -->
          <div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm flex flex-col h-full relative">
            <div class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-[hsl(var(--color-purple))]/50 rounded-tr-2xl"></div>
            <div class="absolute bottom-0 left-0 w-8 h-8 border-b-2 border-l-2 border-[hsl(var(--color-pink))]/50 rounded-bl-2xl"></div>

            <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider">
              <div class="w-2 h-6 bg-[hsl(var(--color-purple))]"></div>
              Gateway QR
            </h2>
            
            <div class="flex-grow flex flex-col items-center justify-center p-6 bg-background rounded-2xl border border-border/60 relative overflow-hidden" 
                 id="qrCodeContainer"
                 style="background-image: radial-gradient(circle at 2px 2px, rgba(150,150,150,0.1) 1px, transparent 0); background-size: 20px 20px;">
              <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-3xl"></div>
              <div class="absolute bottom-0 left-0 w-32 h-32 bg-accent/5 rounded-full blur-3xl"></div>
              
              <p class="text-muted-foreground text-sm font-mono p-4 text-center">AWAITING_CONFIG<span class="animate-pulse">_</span></p>
            </div>
            
            <div class="qr-footer text-xs text-muted-foreground mt-4 text-center"> 
              <span id="molt-qr-watermark">OPENCLAW | BOONDIT.SITE</span>
            </div>

            <!-- JSON Preview -->
            <div class="mt-8 pt-6 border-t border-border/30">
              <label class="block text-sm font-mono text-muted-foreground uppercase tracking-widest mb-3">Payload.json</label>
              <div class="relative bg-black/50 border border-border/60 rounded-xl overflow-hidden p-1">
                <pre id="jsonPreview" class="w-full px-4 py-4 text-[hsl(var(--color-pink))] font-mono text-[11px] h-32 overflow-y-auto custom-scrollbar">{}</pre>
              </div>
              <div class="mt-4 flex gap-3">
                <button
                  id="downloadQrBtn"
                  disabled
                  class="flex-1 py-3 bg-secondary hover:bg-secondary/80 text-secondary-foreground rounded-xl font-mono text-xs tracking-wider transition-all shadow-sm flex justify-center items-center gap-2 border border-border/50 uppercase disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                  DL_QR
                </button>
                <button
                  id="expandQrBtn"
                  class="flex-1 py-3 bg-background hover:bg-secondary/30 text-foreground rounded-xl border border-border/50 font-mono text-xs tracking-wider transition-all shadow-sm flex justify-center items-center gap-2 uppercase hidden"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h6v6"/><path d="M9 21H3v-6"/><path d="M21 3l-7 7"/><path d="M3 21l7-7"/></svg>
                  EXPAND
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Instructions & FAQ Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- How to Use -->
          <div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm relative h-full">
            <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-[hsl(var(--color-pink))]/50 rounded-tl-2xl"></div>
            <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider text-foreground">
              <div class="w-2 h-6 bg-[hsl(var(--color-pink))]"></div>
              HOW_TO_USE
            </h2>
            <div class="space-y-6">
                <div class="flex gap-4">
                    <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-[hsl(var(--color-pink))]/10 text-[hsl(var(--color-pink))] flex items-center justify-center font-mono font-bold border border-[hsl(var(--color-pink))]/20">01</div>
                    <div>
                        <h3 class="font-bold text-foreground mb-1 font-mono text-sm uppercase">Scan QR Code</h3>
                        <p class="text-muted-foreground text-xs leading-relaxed font-mono">Scan the generated QR code with your Rabbit R1 device's camera.</p>
                    </div>
                </div>

                <div class="flex gap-4">
                    <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-[hsl(var(--color-purple))]/10 text-[hsl(var(--color-purple))] flex items-center justify-center font-mono font-bold border border-[hsl(var(--color-purple))]/20">02</div>
                    <div>
                        <h3 class="font-bold text-foreground mb-1 font-mono text-sm uppercase">Approve in Web UI</h3>
                        <p class="text-muted-foreground text-xs leading-relaxed font-mono">Open <a id="nodesLink" href="http://IP:port/nodes" class="text-[hsl(var(--color-pink))] hover:underline">http://IP:port/nodes</a>, then click <strong>Approve</strong> next to <strong>Rabbit R1</strong>.</p>
                    </div>
                </div>
            </div>
          </div>

          <!-- FAQ / Troubleshooting -->
          <div class="bg-card/40 border border-border/50 rounded-2xl p-8 shadow-sm relative h-full">
            <div class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-[hsl(var(--color-purple))]/50 rounded-tr-2xl"></div>
            <h2 class="text-xl font-bold mb-6 flex items-center gap-3 border-b border-border/30 pb-4 font-mono uppercase tracking-wider text-foreground">
              <div class="w-2 h-6 bg-[hsl(var(--color-purple))]"></div>
              FAQ_TROUBLESHOOT
            </h2>
            <div class="space-y-3">
                <details class="group bg-background/40 rounded-xl border border-border/50 overflow-hidden">
                    <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-secondary/20 transition-colors select-none">
                        <h3 class="font-bold text-foreground text-xs font-mono uppercase tracking-wide">Gateway Error?</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                    </summary>
                    <div class="px-4 pb-4 pt-0">
                        <div class="text-muted-foreground text-[10px] leading-relaxed border-t border-border/30 pt-3 space-y-2 font-mono uppercase">
                          <p>• Ensure Bind is set to LAN (not Loopback).</p>
                          <p>• Check OS/Router firewalls for the specified port.</p>
                          <p>• R1 cannot see 127.0.0.1; use LAN IP (192.168.x.x).</p>
                          <p>• For non-local IPs, you MUST use WSS with SSL.</p>
                        </div>
                    </div>
                </details>

                <details class="group bg-background/40 rounded-xl border border-border/50 overflow-hidden">
                    <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-secondary/20 transition-colors select-none">
                        <h3 class="font-bold text-foreground text-xs font-mono uppercase tracking-wide">Is this safe?</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                    </summary>
                    <div class="px-4 pb-4 pt-0">
                        <p class="text-muted-foreground text-[10px] font-mono border-t border-border/30 pt-3 uppercase tracking-tighter">
                          Use at your own risk. This project is open source and community-driven.
                        </p>
                    </div>
                </details>

                <details class="group bg-background/40 rounded-xl border border-border/50 overflow-hidden">
                    <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-secondary/20 transition-colors select-none">
                        <h3 class="font-bold text-foreground text-xs font-mono uppercase tracking-wide">WSS vs WS?</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                    </summary>
                    <div class="px-4 pb-4 pt-0">
                        <p class="text-muted-foreground text-[10px] font-mono border-t border-border/30 pt-3 leading-relaxed uppercase">
                          WS is for local network only. WSS is required for remote access and is highly recommended for security.
                        </p>
                    </div>
                </details>
            </div>
          </div>
        </div>
      </div>
    </Section>
  </div>

  <!-- Fullscreen Modal -->
  <div id="qrModal" class="fixed inset-0 z-[10000] bg-black/95 backdrop-blur-md hidden items-center justify-center p-4">
      <div class="relative w-full max-w-2xl flex flex-col items-center">
          <button id="closeModalBtn" class="absolute -top-16 right-0 text-white hover:text-[hsl(var(--color-pink))] transition-colors p-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
          </button>
          <div id="modalQrContainer" class="bg-white p-10 rounded-2xl shadow-2xl border-4 border-[hsl(var(--color-pink))]/20"></div>
          <p class="text-[hsl(var(--color-pink))] mt-8 text-center font-mono font-bold uppercase tracking-widest animate-pulse">Scan_with_Rabbit_R1</p>
      </div>
  </div>
</Layout>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: hsl(var(--color-pink) / 0.3);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: hsl(var(--color-pink) / 0.5);
  }
</style>

<script>
    import QRCodeStyling from "qr-code-styling";

    const form = document.getElementById('moltbotForm') as HTMLFormElement;
    const qrContainer = document.getElementById('qrCodeContainer');
    const modalQrContainer = document.getElementById('modalQrContainer');
    const jsonPreview = document.getElementById('jsonPreview');
    const expandBtn = document.getElementById('expandQrBtn');
    const modal = document.getElementById('qrModal');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const testBtn = document.getElementById('testConnectionBtn') as HTMLButtonElement | null;
    const testNote = document.getElementById('testConnectionNote');
    const testLabel = document.getElementById('testConnectionLabel');
    const nodesLink = document.getElementById('nodesLink') as HTMLAnchorElement | null;

    let currentPayload: string | null = null;
    let qrCode: QRCodeStyling | null = null;
    let modalQrCode: QRCodeStyling | null = null;

    const updateTestButtonState = (protocolValue: string) => {
        if (!testBtn) return;
        const isWs = protocolValue === 'ws';
        testBtn.disabled = isWs;
        testBtn.setAttribute('aria-disabled', isWs ? 'true' : 'false');
        if (testLabel) {
            testLabel.textContent = isWs ? 'Test Disabled (WS/local IPs)' : 'Test Connectivity';
        }
        if (testNote) {
            testNote.classList.toggle('hidden', !isWs);
        }
    };

    // Modal Logic
    const openModal = () => {
        if (!currentPayload || !modal || !modalQrContainer) return;
        
        modalQrContainer.innerHTML = '';
        modal.classList.remove('hidden');
        modal.classList.add('flex');

        modalQrCode = new QRCodeStyling({
            width: 500,
            height: 500,
            data: currentPayload,
            dotsOptions: { color: "#000000", type: "rounded" },
            backgroundOptions: { color: "#ffffff" },
        });
        modalQrCode.append(modalQrContainer);
    };

    const closeModal = () => {
        if (!modal) return;
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    };

    expandBtn?.addEventListener('click', openModal);
    closeModalBtn?.addEventListener('click', closeModal);
    modal?.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal?.classList.contains('hidden')) closeModal();
    });

    // Payload Logic
    const updatePayload = () => {
        const ipsInputEl = document.getElementById('ips') as HTMLInputElement;
        const portInput = (document.getElementById('port') as HTMLInputElement).value;
        const tokenInput = (document.getElementById('token') as HTMLInputElement).value;
        const protocolSelect = document.getElementById('protocol') as HTMLSelectElement;
        const ipsInput = ipsInputEl?.value ?? '';

        // Process IPs
        const ips = ipsInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
        if (ips.some(ip => ip.startsWith('192.')) && protocolSelect?.value !== 'ws') {
            protocolSelect.value = 'ws';
        }

        const nodesHost = ips.length > 0 ? ips[0] : 'IP';
        const nodesPort = portInput || 'port';
        const nodesUrl = `http://${nodesHost}:${nodesPort}/nodes`;
        if (nodesLink) {
            nodesLink.href = nodesUrl;
            nodesLink.textContent = nodesUrl;
        }

        const protocolInput = protocolSelect?.value ?? 'wss';
        
        const payload = {
            type: "clawdbot-gateway",
            version: 1,
            ips: ips,
            port: parseInt(portInput, 10) || 18789,
            token: tokenInput,
            protocol: protocolInput
        };

        const jsonString = JSON.stringify(payload);
        currentPayload = jsonString;

        if (jsonPreview) {
            jsonPreview.textContent = JSON.stringify(payload, null, 2);
        }

        // generate QR
        if (qrContainer) {
            qrContainer.innerHTML = '';
            const wrapper = document.createElement('div');
            wrapper.className = 'bg-white p-4 rounded-xl shadow-sm mb-6 flex items-center justify-center min-w-[250px] min-h-[250px] relative z-10 border border-border/20';
            qrCode = new QRCodeStyling({
                width: 250,
                height: 250,
                data: currentPayload,
                dotsOptions: { color: "#000000", type: "rounded" },
                backgroundOptions: { color: "#ffffff" }
            });
            qrCode.append(wrapper);
            qrContainer.appendChild(wrapper);
        }

        // enable download and watermark
        const dlBtn = document.getElementById('downloadQrBtn') as HTMLButtonElement;
        if (dlBtn && tokenInput && ips.length > 0) {
            dlBtn.disabled = false;
            dlBtn.classList.remove('opacity-50', 'cursor-not-allowed');
        } else if (dlBtn) {
            dlBtn.disabled = true;
            dlBtn.classList.add('opacity-50', 'cursor-not-allowed');
        }

        const watermark = document.getElementById('molt-qr-watermark');
        if (watermark) watermark.textContent = `OPENCLAW | BOONDIT.SITE`;

        updateTestButtonState(protocolInput);

        return jsonString;
    };

    // Add listeners for real-time updates
    const inputs = ['ips', 'port', 'token', 'protocol'];
    inputs.forEach(id => {
        const element = document.getElementById(id);
        if (element) {
            element.addEventListener('input', updatePayload);
            element.addEventListener('change', updatePayload);
        }
    });

    const dlBtn = document.getElementById('downloadQrBtn');
    if (dlBtn) {
        dlBtn.addEventListener('click', () => {
            if (!qrCode) return;
            qrCode.download({ name: 'openclaw-qr', extension: 'png' });
        });
    }

    updatePayload();

    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        const jsonString = updatePayload();
        if (expandBtn) expandBtn.classList.remove('hidden');
        openModal();
    });

    // Test Connection Logic
    const testLog = document.getElementById('testLog');
    const log = (msg: string, type: 'info' | 'success' | 'error' | 'warning' = 'info') => {
        if (!testLog) return;
        const div = document.createElement('div');
        div.className = `break-words ${
            type === 'success' ? 'text-green-400' :
            type === 'error' ? 'text-red-400' :
            type === 'warning' ? 'text-yellow-400' :
            'text-[hsl(var(--color-pink))]'
        }`;
        div.textContent = `> ${msg.toUpperCase()}`;
        testLog.appendChild(div);
        testLog.scrollTop = testLog.scrollHeight;
    };

    testBtn?.addEventListener('click', () => {
        if (!testLog) return;
        testLog.innerHTML = ''; 
        log('INITIALIZING_TEST...');

        const ipsInput = (document.getElementById('ips') as HTMLInputElement).value;
        const portInput = (document.getElementById('port') as HTMLInputElement).value;
        const tokenInput = (document.getElementById('token') as HTMLInputElement).value;
        const protocolInput = (document.getElementById('protocol') as HTMLSelectElement).value;

        if (!tokenInput) {
            log('ERROR: TOKEN_REQUIRED', 'error');
            return;
        }

        const ips = ipsInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
        const host = ips.length > 0 ? ips[0] : 'localhost';
        const port = portInput || '18789';
        
        const url = `${protocolInput}://${host}:${port}`;
        log(`1. CONNECTING_TO_${url}...`);

        let ws: WebSocket;
        let isConnected = false;
        let handshakeSent = false;

        try {
            ws = new WebSocket(url);
        } catch (e: any) {
            log(`WS_CREATION_FAILED: ${e.message}`, 'error');
            return;
        }

        const timeout = setTimeout(() => {
            if (!isConnected) {
                log('TIMEOUT: GATEWAY_UNREACHABLE', 'error');
                ws.close();
            }
        }, 5000);

        ws.onopen = () => {
            isConnected = true;
            log('2. NETWORK_CONNECTED', 'success');
            log('3. VERIFYING_TOKEN...', 'info');
            
            setTimeout(() => {
                if (ws.readyState === WebSocket.OPEN) {
                    handshakeSent = true;
                    const connectReq = {
                        type: "req",
                        id: "test-" + Date.now(),
                        method: "connect",
                        params: {
                            minProtocol: 3,
                            maxProtocol: 3,
                            client: { id: "web", version: "1.0.0", platform: "web", mode: "operator" },
                            role: "operator",
                            scopes: ["operator.read"], 
                            auth: { token: tokenInput },
                            device: { id: "boondit-tester", publicKey: "dummy", signature: "dummy", signedAt: Date.now(), nonce: "dummy" }
                        }
                    };
                    ws.send(JSON.stringify(connectReq));
                }
            }, 100);
        };

        ws.onmessage = (event) => {
            clearTimeout(timeout);
            try {
                const data = JSON.parse(event.data);
                if (data.type === 'res' && data.ok) {
                    log('4. AUTH_SUCCESS', 'success');
                    ws.close();
                } else if (data.type === 'res' && !data.ok) {
                    log(`FAILED: ${JSON.stringify(data.error)}`, 'error');
                    ws.close();
                }
            } catch (e) {
                log('INVALID_RESPONSE', 'error');
            }
        };

        ws.onerror = () => {
            clearTimeout(timeout);
            if (!isConnected) log('CONNECTION_FAILED', 'error');
        };
    });
