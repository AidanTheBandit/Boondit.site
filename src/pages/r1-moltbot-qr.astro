---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
---

<Layout title="R1 OpenClaw QR Gen - Boondit">
  <Section title="R1 OpenClaw QR Generator" className="min-h-screen">
    <div class="max-w-7xl mx-auto p-6">
      <header class="text-center mb-10">
        
        <div class="mt-4 mx-auto max-w-2xl relative group">
          <div class="absolute -inset-[1px] bg-gradient-to-r from-[hsl(var(--color-pink))] via-[hsl(var(--color-purple))] to-[hsl(var(--color-gray))] rounded-2xl opacity-50 group-hover:opacity-100 transition-opacity blur-sm"></div>
          <div class="relative bg-yellow-500/10 border border-yellow-500/20 rounded-xl p-4 max-w-2xl mx-auto backdrop-blur-sm">
              <p class="text-yellow-200 font-bold flex items-center justify-center gap-2 mb-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" x2="12" y1="9" y2="13"/><line x1="12" x2="12.01" y1="17" y2="17"/></svg>
                  SENSITIVE DATA
              </p>
              <p class="text-yellow-100/80 text-sm">
                  The generated QR code contains personal information (your token) and should <strong>NOT</strong> be shared with others. Boondit.site will never upload any of this data your enter here. QR code generation happens locally in your browser.
              </p>
          </div>
        </div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Configuration & Test -->
        <div class="space-y-8">
            <article class="card">
                <h2 class="card-title">Configuration</h2>
                <form id="moltbotForm" class="space-y-5">
                    <div class="form-group">
                        <label for="ips" class="form-label">
                            IP Addresses <span class="text-muted-foreground font-normal normal-case ml-1">(comma separated)</span>
                        </label>
                        <input type="text" id="ips" class="form-input" placeholder="1.2.3.4, 5.6.7.8" required>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div class="form-group mb-0">
                            <label for="port" class="form-label">Port</label>
                            <input type="number" id="port" class="form-input" value="18789" required>
                        </div>
                        <div class="form-group mb-0">
                            <label for="protocol" class="form-label">Protocol</label>
                            <select id="protocol" class="form-select">
                                <option value="wss" selected>wss</option>
                                <option value="ws">ws</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="token" class="form-label">Token</label>
                        <input type="text" id="token" class="form-input" placeholder="secret-token" required>
                    </div>

                    <button type="submit" class="btn-primary w-full shadow-lg shadow-blue-500/20">
                        Generate QR Code
                    </button>
                </form>
            </article>

            <!-- Test Connection -->
            <article class="card">
                 <h2 class="card-title">Test Connection</h2>
                 <div class="space-y-4">
                        Verify connectivity to your OpenClaw instance.
                    </p>
                    
                    <div id="testLog" class="bg-card/40 rounded-lg p-3 border border-border/60 min-h-[100px] font-mono text-[11px] overflow-y-auto max-h-[150px] flex flex-col gap-1">
                        <span class="text-muted-foreground italic">Ready to test...</span>
                    </div>

                    <button id="testConnectionBtn" type="button" class="btn-secondary w-full text-sm py-2 flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                        <span id="testConnectionLabel">Test Connectivity</span>
                    </button>
                    <p id="testConnectionNote" class="text-xs text-yellow-300 hidden">Test connection doesn't work for local IPs when using WS.</p>
                 </div>
            </article>
        </div>

        <!-- Preview -->
        <article class="card h-full flex flex-col">
            <div class="flex items-center justify-between mb-4">
                <h2 class="card-title mb-0 border-none pb-0">QR Code</h2>
                <button id="expandQrBtn" class="btn-secondary text-xs py-1.5 px-3 hidden flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h6v6"/><path d="M9 21H3v-6"/><path d="M21 3l-7 7"/><path d="M3 21l7-7"/></svg>
                    Expand
                </button>
            </div>
            
              <div class="flex-1 min-h-[300px] flex flex-col items-center justify-center p-6 bg-card/40 rounded-xl border border-border/60 mb-4 relative overflow-hidden group"
                   id="qrCodeContainer"
                   style="background-image: radial-gradient(circle at 2px 2px, rgba(150,150,150,0.1) 1px, transparent 0); background-size: 20px 20px;">
                  <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-3xl"></div>
                  <div class="absolute bottom-0 left-0 w-32 h-32 bg-accent/5 rounded-full blur-3xl"></div>
                  <p class="text-muted-foreground text-sm font-medium">Generate a QR code to see it here</p>
              </div>
            <div class="qr-footer text-xs text-muted-foreground mt-2 text-center">
                <span id="molt-qr-watermark">OpenClaw | boondit.site</span>
            </div>
            
            <div class="w-full">
                <h3 class="text-xs font-semibold text-muted-foreground mb-2 uppercase tracking-wider">JSON Payload</h3>
                <pre id="jsonPreview" class="json-preview !max-h-[120px]"></pre>
                <div class="mt-3 flex gap-3">
                    <button id="downloadQrBtn" class="btn-secondary text-sm py-2 px-3" disabled>Download QR</button>
                </div>
            </div>
        </article>
      </div>

      <!-- Instructions & FAQ -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- How to Use -->
          <article class="card">
            <h2 class="card-title">How to Use</h2>
            <div class="space-y-6">
                <div class="flex gap-4">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-[hsl(var(--color-pink))]/10 text-[hsl(var(--color-pink))] flex items-center justify-center font-bold border border-border/30">1</div>
                    <div>
                        <h3 class="font-semibold text-white mb-1">Scan QR Code</h3>
                        <p class="text-muted-foreground text-sm">Scan the generated QR code with your Rabbit R1 device's camera.</p>
                    </div>
                </div>

                <div class="flex gap-4">
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-[hsl(var(--color-purple))]/10 text-[hsl(var(--color-purple))] flex items-center justify-center font-bold border border-border/30">2</div>
                    <div>
                        <h3 class="font-semibold text-white mb-2">Approve in Web UI</h3>
                        <p class="text-muted-foreground text-sm">Open <a id="nodesLink" href="http://IP:port/nodes" class="text-accent hover:text-accent/80 hover:underline">http://IP:port/nodes</a>, then click <strong>Approve</strong> next to <strong>Rabbit R1</strong>.</p>
                    </div>
                </div>
            </div>
          </article>

          <!-- FAQ / Troubleshooting -->
          <article class="card">
              <h2 class="card-title">FAQ / Troubleshooting</h2>
              <div class="space-y-3">
                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-bold text-white text-sm">Device stuck on "Gateway error"?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">
                            Check the following:
                            <ul class="list-disc ml-4 mt-2 space-y-1">
                                <li>Ensure <strong>Settings &gt; Gateway &gt; Bind</strong> is set to <strong>LAN</strong> (not Loopback).</li>
                                <li>Ensure your firewall is allowing traffic on the specified port.</li>
                                <li>If using localhost/127.0.0.1, the R1 cannot see it. Use your computer's LAN IP (e.g. 192.168.x.x).</li>
                                <li>For non-local IPs, you <strong>MUST</strong> use <strong>WSS</strong> with a valid SSL certificate.</li>
                                <li>If using cloudflared, ensure you use port <strong>443</strong>.</li>
                                <li>Verify the token is exactly as copied.</li>
                            </ul>
                          </p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-bold text-white text-sm">Device stuck on "Gateway unreachable"?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">
                            This indicates a network-level connectivity issue:
                            <ul class="list-disc ml-4 mt-2 space-y-1">
                                <li><strong>Service Status:</strong> Ensure the OpenClaw service is actually running on your computer.</li>
                                <li><strong>Firewall:</strong> Check that your OS firewall (Windows Defender/macOS Firewall) isn't blocking the port.</li>
                                <li><strong>Port Forwarding:</strong> If connecting remotely, ensure ports are correctly forwarded on your router.</li>
                            </ul>
                          </p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">How do I setup OpenClaw?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">
                              Check out the documentation at <a href="https://docs.molt.bot/" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300 hover:underline">docs.molt.bot</a>
                          </p>
                      </div>
                  </details>

<details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                          <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                              <h3 class="font-semibold text-white text-sm">Is OpenClaw a rabbit product?</h3>
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                          </summary>
                          <div class="px-4 pb-4 pt-0">
                              <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">
                              No. It is an open source project that can be found here: <a href="https://github.com/moltbot/moltbot" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300 hover:underline">github.com/moltbot/moltbot</a>
                          </p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">Is OpenClaw safe?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">Use at your own risk.</p>
                      </div>
                  </details>
                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">Is Tailscale supported?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">No. Please use a reverse proxy or another tunneling service like cloudflared for remote access.</p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">Can I use WS (WebSocket)?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">Only on your local network (e.g., 192.168.x.x IPs). Use WSS (Secure WebSocket) for anything remotely accessible or secured.</p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">Can I share my OpenClaw?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-red-400/90 text-sm leading-relaxed font-medium border-t border-border/60 pt-3">NO. This is very unsafe. Your token grants access to your R1 device.</p>
                      </div>
                  </details>

                   <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">Is this the same as clawdbot?</h3>
                           <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">Yes, OpenClaw is the evolution of MoltBot/clawdbot.</p>
                      </div>
                  </details>

                  <details class="group bg-card/40 rounded-lg border border-border/60 overflow-hidden">
                      <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-card/50 transition-colors select-none">
                          <h3 class="font-semibold text-white text-sm">How do I remove/unlink my R1?</h3>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground transition-transform group-open:rotate-180"><path d="m6 9 6 6 6-6"/></svg>
                      </summary>
                      <div class="px-4 pb-4 pt-0">
                          <p class="text-muted-foreground text-sm leading-relaxed border-t border-border/60 pt-3">Go to the Web UI &gt; Nodes &gt; Rabbit R1 &gt; Revoke.</p>
                      </div>
                  </details>
                  

              </div>
          </article>
      </div>
    </div>
  </Section>

  <!-- Fullscreen Modal -->
  <div id="qrModal" class="fixed inset-0 z-[10000] bg-black/90 backdrop-blur-md hidden items-center justify-center p-4">
      <div class="relative w-full max-w-2xl flex flex-col items-center">
          <button id="closeModalBtn" class="absolute -top-12 right-0 text-white hover:text-muted-foreground/80 transition-colors p-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
          </button>
          <div id="modalQrContainer" class="bg-white p-8 rounded-xl shadow-2xl"></div>
          <p class="text-white/70 mt-6 text-center">Scan this code with your device</p>
      </div>
  </div>
</Layout>

<script>
    import QRCodeStyling from "qr-code-styling";

    // Define types
    interface MoltBotPayload {
        type: "clawdbot-gateway";
        version: number;
        ips: string[];
        port: number;
        token: string;
        protocol: string;
    }

    const form = document.getElementById('moltbotForm') as HTMLFormElement;
    const qrContainer = document.getElementById('qrCodeContainer');
    const modalQrContainer = document.getElementById('modalQrContainer');
    const jsonPreview = document.getElementById('jsonPreview');
    const expandBtn = document.getElementById('expandQrBtn');
    const modal = document.getElementById('qrModal');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const testBtn = document.getElementById('testConnectionBtn') as HTMLButtonElement | null;
    const testNote = document.getElementById('testConnectionNote');
    const testLabel = document.getElementById('testConnectionLabel');
    const nodesLink = document.getElementById('nodesLink') as HTMLAnchorElement | null;

    let currentPayload: string | null = null;
    let qrCode: QRCodeStyling | null = null;
    let modalQrCode: QRCodeStyling | null = null;

    const updateTestButtonState = (protocolValue: string) => {
        if (!testBtn) return;
        const isWs = protocolValue === 'ws';
        testBtn.disabled = isWs;
        testBtn.setAttribute('aria-disabled', isWs ? 'true' : 'false');
        if (testLabel) {
            testLabel.textContent = isWs ? 'Test Disabled (WS/local IPs)' : 'Test Connectivity';
        }
        if (testNote) {
            testNote.classList.toggle('hidden', !isWs);
        }
    };

    // Clipboard Logic
    document.querySelectorAll('.copy-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            const targetId = btn.getAttribute('data-clipboard-target');
            if (targetId) {
                const codeElement = document.querySelector(targetId);
                if (codeElement && codeElement.textContent) {
                    navigator.clipboard.writeText(codeElement.textContent).then(() => {
                        const originalText = btn.textContent;
                        btn.textContent = 'Copied!';
                        setTimeout(() => {
                            btn.textContent = originalText;
                        }, 2000);
                    });
                }
            }
        });
    });

    // Modal Logic
    const openModal = () => {
        if (!currentPayload || !modal || !modalQrContainer) return;
        
        modalQrContainer.innerHTML = '';
        modal.classList.remove('hidden');
        modal.classList.add('flex');

        modalQrCode = new QRCodeStyling({
            width: 500,
            height: 500,
            data: currentPayload,
            dotsOptions: { color: "#000000", type: "rounded" },
            backgroundOptions: { color: "#ffffff" },
        });
        modalQrCode.append(modalQrContainer);
    };

    const closeModal = () => {
        if (!modal) return;
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    };

    expandBtn?.addEventListener('click', openModal);
    closeModalBtn?.addEventListener('click', closeModal);
    modal?.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal?.classList.contains('hidden')) closeModal();
    });

    // Payload Logic
    const updatePayload = () => {
        const ipsInputEl = document.getElementById('ips') as HTMLInputElement;
        const portInput = (document.getElementById('port') as HTMLInputElement).value;
        const tokenInput = (document.getElementById('token') as HTMLInputElement).value;
        const protocolSelect = document.getElementById('protocol') as HTMLSelectElement;
        const ipsInput = ipsInputEl?.value ?? '';

        // Process IPs
        const ips = ipsInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
        if (ips.some(ip => ip.startsWith('192.')) && protocolSelect?.value !== 'ws') {
            protocolSelect.value = 'ws';
        }

        const nodesHost = ips.length > 0 ? ips[0] : 'IP';
        const nodesPort = portInput || 'port';
        const nodesUrl = `http://${nodesHost}:${nodesPort}/nodes`;
        if (nodesLink) {
            nodesLink.href = nodesUrl;
            nodesLink.textContent = nodesUrl;
        }

        const protocolInput = protocolSelect?.value ?? 'wss';
        
        // Basic payload structure even with empty fields for preview
        const payload = {
            type: "clawdbot-gateway",
            version: 1,
            ips: ips,
            port: parseInt(portInput, 10) || 18789,
            token: tokenInput,
            protocol: protocolInput
        };

        const jsonString = JSON.stringify(payload);
        currentPayload = jsonString;

        // Update Text Preview
        if (jsonPreview) {
            jsonPreview.textContent = JSON.stringify(payload, null, 2);
        }

        // generate QR
        qrContainer.innerHTML = '';
        // use a styled wrapper like the creation generator preview
        const wrapper = document.createElement('div');
        wrapper.className = 'bg-white p-4 rounded-xl shadow-sm mb-6 flex items-center justify-center min-w-[250px] min-h-[250px] relative z-10 border border-border/20';
        qrCode = new QRCodeStyling({
            width: 250,
            height: 250,
            data: currentPayload,
            dotsOptions: { color: "#000000", type: "rounded" },
            backgroundOptions: { color: "#ffffff" }
        });
        qrCode.append(wrapper);
        qrContainer.appendChild(wrapper);

        // enable download and watermark
        const dlBtn = document.getElementById('downloadQrBtn');
        if (dlBtn) {
            dlBtn.removeAttribute('disabled');
            dlBtn.addEventListener('click', () => {
                if (!qrCode) return;
                try { qrCode.download({ name: 'openclaw-qr', extension: 'png' }); }
                catch (e) {
                    const svgEl = qrCode._el?.querySelector('svg');
                    if (svgEl) {
                        const serializer = new XMLSerializer();
                        const svgStr = serializer.serializeToString(svgEl);
                        const blob = new Blob([svgStr], { type: 'image/svg+xml' });
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url; a.download = 'openclaw-qr.svg'; document.body.appendChild(a); a.click(); document.body.removeChild(a); URL.revokeObjectURL(url);
                    }
                }
            });
        }

        const watermark = document.getElementById('molt-qr-watermark');
        if (watermark) watermark.textContent = `OpenClaw | boondit.site`;

        updateTestButtonState(protocolInput);

        return jsonString;
    };

    // Add listeners for real-time updates
    const inputs = ['ips', 'port', 'token', 'protocol'];
    inputs.forEach(id => {
        const element = document.getElementById(id);
        if (element) {
            element.addEventListener('input', updatePayload);
            element.addEventListener('change', updatePayload); // For select element
        }
    });

    updatePayload();

    // Initialize preview immediately
    updatePayload();

    // Form Logic
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Ensure payload is up to date
        const jsonString = updatePayload();

        // Show expand button
        if (expandBtn) expandBtn.classList.remove('hidden');

        // Generate QR
        if (qrContainer) {
            qrContainer.innerHTML = '';
            
            try {
                qrCode = new QRCodeStyling({
                    width: 300,
                    height: 300,
                    data: jsonString,
                    dotsOptions: { color: "#000000", type: "rounded" },
                    backgroundOptions: { color: "#ffffff" },
                });
                qrCode.append(qrContainer);
            } catch (err) {
               console.error(err);
               qrContainer.innerHTML = '<p class="text-red-500">Error generating QR.</p>';
            }
        }
    });

    // Test Connection Logic
    const testLog = document.getElementById('testLog');

    const log = (msg: string, type: 'info' | 'success' | 'error' | 'warning' = 'info') => {
        if (!testLog) return;
        const div = document.createElement('div');
        div.className = `break-words ${
            type === 'success' ? 'text-green-400' :
            type === 'error' ? 'text-red-400' :
            type === 'warning' ? 'text-yellow-400' :
            'text-muted-foreground'
        }`;
        div.textContent = `> ${msg}`;
        testLog.appendChild(div);
        testLog.scrollTop = testLog.scrollHeight;
    };

    testBtn?.addEventListener('click', () => {
        if (!testLog) return;
        testLog.innerHTML = ''; 
        log('Initializing test...');

        const ipsInput = (document.getElementById('ips') as HTMLInputElement).value;
        const portInput = (document.getElementById('port') as HTMLInputElement).value;
        const tokenInput = (document.getElementById('token') as HTMLInputElement).value;
        const protocolInput = (document.getElementById('protocol') as HTMLSelectElement).value;

        if (!tokenInput) {
            log('Error: Token is required.', 'error');
            return;
        }

        // Process IPs
        const ips = ipsInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
        const host = ips.length > 0 ? ips[0] : 'localhost';
        const port = portInput || '18789';
        
        const url = `${protocolInput}://${host}:${port}`;
        log(`1. Connecting to ${url}...`);

        let ws: WebSocket;
        let isConnected = false;
        let handshakeSent = false;

        try {
            ws = new WebSocket(url);
        } catch (e: any) {
            log(`Failed to create WebSocket: ${e.message}`, 'error');
            if (window.location.protocol === 'https:' && protocolInput === 'ws') {
                 log('Hint: Mixed Content (HTTPS -> WS) blocked. Use WSS.', 'warning');
            }
            return;
        }

        const timeout = setTimeout(() => {
            if (!isConnected) {
                log('Connection timeout (5s). Gateway unreachable.', 'error');
                log('Hint: Check Firewall, Port Forwarding, or start OpenClaw.', 'warning');
                ws.close();
            }
        }, 5000);

        ws.onopen = () => {
            isConnected = true;
            log('2. Network Connected! (Gateway Reachable)', 'success');
            log('3. Verifying Token...', 'info');
            
            // Allow time for server to send challenge if it wants, otherwise send our connect
            setTimeout(() => {
                if (ws.readyState === WebSocket.OPEN) {
                    sendConnect();
                }
            }, 100);
        };

        const sendConnect = () => {
            handshakeSent = true;
            const connectReq = {
                type: "req",
                id: "test-" + Date.now(),
                method: "connect",
                params: {
                    minProtocol: 3,
                    maxProtocol: 3,
                    client: {
                        id: "web",
                        version: "1.0.0",
                        platform: "web",
                        mode: "operator"
                    },
                    role: "operator",
                    scopes: ["operator.read"], 
                    caps: [],
                    commands: [],
                    permissions: {},
                    auth: { token: tokenInput },
                    locale: "en-US",
                    userAgent: "boondit-web/1.0.0",
                    device: {
                         id: "boondit-tester-" + Math.random().toString(36).substring(7),
                         publicKey: "dummy", 
                         signature: "dummy",
                         signedAt: Date.now(),
                         nonce: "dummy"
                    }
                }
            };
            ws.send(JSON.stringify(connectReq));
        }

        ws.onmessage = (event) => {
            clearTimeout(timeout);
            try {
                const data = JSON.parse(event.data);
                
                // If we get a challenge first, just send our connect frame
                if (data.type === 'event' && data.event === 'connect.challenge') {
                    // Server is alive and speaking protocol
                    if (!handshakeSent) sendConnect();
                    return;
                }

                if (data.type === 'res' && data.ok && data.payload?.type === 'hello-ok') {
                    log('4. Token Accepted! (Authenticated)', 'success');
                    ws.close();
                } else if (data.type === 'res' && !data.ok) {
                    // Check for schema validation errors which imply we reached the gateway
                    if (data.error && data.error.message && data.error.message.includes('invalid connect params')) {
                        log('Gateway Connected! (Reachable)', 'success');
                        log('Note: Full verification skipped. The Gateway is enforcing strict device identity (Signatures), which this web tool cannot generate without your private keys. However, your URL/Port are correct.', 'warning');
                    } else if (data.error && (data.error.includes?.('auth') || data.error.code === 401)) {
                         log('Authentication Failed: Invalid Token.', 'error');
                    } else {
                         log(`Handshake Rejected: ${JSON.stringify(data.error)}`, 'error');
                    }
                    ws.close();
                } else {
                     // Any other valid protocol message implies token was at least processed
                     log('Response received (likely valid config).', 'info');
                     ws.close();
                }

            } catch (e) {
                log('Invalid response format.', 'error');
            }
        };

        ws.onerror = (error) => {
            clearTimeout(timeout);
            if (!isConnected) {
                log('Connection Failed (Network Error).', 'error');
                if (window.location.protocol === 'https:' && protocolInput === 'ws') {
                    log('Hint: Mixed Content (HTTPS -> WS) blocked.', 'warning');
                } else {
                    log('Hint: Is the IP/Port correct? Is OpenClaw running?', 'warning');
                }
            } else {
                log('Socket error after connection.', 'error');
            }
        };

        ws.onclose = (event) => {
            clearTimeout(timeout);
            if (isConnected && handshakeSent) {
                // If we get specific protocol closure codes
                if (event.code === 1008) {
                    log('Gateway Connected! (Reachable)', 'success');
                    log('Note: Connection closed by policy (Code 1008). This confirms you reached the Gateway, but it requires a signed device identity for full access.', 'warning');
                } else if (event.code === 1006 || event.code === 1000) { 
                     log('Connection closed by server.', 'warning');
                     log('Hint: This usually means the Token is Invalid.', 'warning');
                } else {
                     log(`Closed (Code: ${event.code}).`, 'info');
                }
            }
        };
    });

